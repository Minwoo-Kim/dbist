	</aop:config>
	<bean id="sqlAspect" class="org.dbist.aspect.SqlAspect">
		<property name="enabled" value="${sqlAspect.enabled}" />
		<property name="prettyPrint" value="${sqlAspect.prettyPrint}" />
	</bean>

